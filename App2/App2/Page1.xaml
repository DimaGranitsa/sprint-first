<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Page1">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Регистрация" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="E-mail" TextColor="Black" Margin="50,50,0,0"/>
            <Entry  BackgroundColor="White" TextColor="Black" Margin="40,0,40,0"/>
            <Label  Text="Логин" TextColor="Black"  Margin="50,30,0,0" />
            <Entry IsPassword="True" BackgroundColor="White" Margin="40,0,30,0" TextColor="Black"/>
            <Label Text="Пароль" TextColor="Black" Margin="50,50,0,0"/>
            <Entry  BackgroundColor="White" TextColor="Black" Margin="40,0,40,0"/>
            <Label  Text="Пароль" TextColor="Black"  Margin="50,30,0,0" />
            <Entry IsPassword="True" BackgroundColor="White" Margin="40,0,30,0" TextColor="Black"/>
            <Button  Text="Зарегистрироваться" HorizontalOptions="CenterAndExpand" BackgroundColor="Gray" TextColor="Black" Margin="12" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>